<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dip"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/btn_listitem"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/video_bitmap"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        />

    <RelativeLayout
        android:id="@+id/video_infi_re"
        android:layout_above="@+id/line"
        android:layout_below="@+id/video_bitmap"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_marginLeft="15dip"
        android:gravity="center_vertical"
         >

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/video_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:textColor="@android:color/black"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/video_type"
            android:textColor="@android:color/black"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/video_size"
            android:textColor="@android:color/black"
            android:textSize="12dip" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/im_coll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_love"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.4dip"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray" />
</RelativeLayout>