<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/video_bitmap"
        android:layout_width="100dip"
        android:layout_height="70dip"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.4dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@+id/video_bitmap"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/im_coll"
        android:layout_toRightOf="@+id/video_bitmap" >

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/video_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:textColor="@android:color/black"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/video_type"
            android:textColor="@android:color/black"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_title"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/video_size"
            android:textColor="@android:color/black"
            android:textSize="12dip" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/im_coll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_love"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>